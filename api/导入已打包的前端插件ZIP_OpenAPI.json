{
  "openapi": "3.0.1",
  "info": {
    "title": "Funny Toolbox API",
    "description": "Funny Toolbox 平台后端接口文档，包含插件管理、菜单等模块",
    "contact": {
      "name": "hxuanyu",
      "url": "https://github.com/hxuanyu",
      "email": ""
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "version": "v1.0.0"
  },
  "servers": [
    {
      "url": "/",
      "description": "默认服务"
    }
  ],
  "paths": {
    "/api/platform/plugins/pack/import": {
      "post": {
        "tags": [
          "平台管理"
        ],
        "summary": "导入已打包的前端插件ZIP",
        "description": "根据打包结果文件名，将 ZIP 复制到插件目录并完成加载（可选启用）",
        "operationId": "importPackedZip",
        "parameters": [
          {
            "name": "fileName",
            "in": "query",
            "description": "打包生成的 ZIP 文件名（位于 data/builds/frontend-plugins 下）",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "enable",
            "in": "query",
            "description": "是否在导入后立即启用该插件",
            "required": false,
            "schema": {
              "type": "boolean",
              "default": true
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/ResultFrontendPluginPackResult"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "ResultFrontendPluginPackResult": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        },
        "data": {
          "$ref": "#/components/schemas/FrontendPluginPackResult"
        }
      }
    },
    "FrontendPluginPackResult": {
      "type": "object",
      "properties": {
        "pluginId": {
          "type": "string",
          "refType": null
        },
        "fileName": {
          "type": "string",
          "refType": null
        },
        "fileSize": {
          "type": "integer",
          "format": "int64",
          "refType": null
        },
        "downloadUrl": {
          "type": "string",
          "refType": null
        },
        "imported": {
          "type": "boolean",
          "refType": null
        }
      }
    }
  }
}